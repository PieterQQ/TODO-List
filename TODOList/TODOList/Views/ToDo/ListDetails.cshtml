@model TODOList.Application.ViewModels.TodoItemListVm
@{
}
<h1>List Details</h1>
<table class="table table-striped">
<thead>
    <tr>
        <td>Is Done</td>
        <td>Name</td>
        <td>Description</td>
        <td>Due Date</td>
    </tr>
</thead>
<tbody>
    <tr>
        @foreach (var item in Model.Items)
        {


            <td><input asp-for="@item.IsCompleted" /></td>
            <td>@item.Task</td>
            <td>@item.Description</td>
            <td>@(item.DueDate.HasValue? item.DueDate.Value.Date.ToShortTimeString():null)</td>
            <td><a asp-action="EditItem" asp-route-id="@item.Id">Edit</a> | <a asp-action="DeleteItem" asp-route-id="@item.Id">Delete</a></td>


        }
    </tr>
</tbody>
    <tfoot>
        <tr>
            <td><a asp-action="CreateItem" asp-Ro-listId="@Model.ListId">Create new item</a></td>
        </tr>
    </tfoot>



</table>
<div>
    <a asp-action="Index">Back to all lists</a>
</div>